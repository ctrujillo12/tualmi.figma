---
import '../../styles/global.css';
import { products } from '../../data/products.js';

export function getStaticPaths() {
  return products.map(product => ({
    params: { slug: product.slug },
    props: { product }
  }));
}

const { product } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{product.name} | Tualmi</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant:wght@300;400;500&family=Inter:wght@300;400;500&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <nav class="nav">
      <a href="/"><img src="/images/logo.png" alt="Tualmi" class="logo" /></a>
      <div class="nav-links">
        <a href="/#collection">COLLECTION</a>
        <a href="/#about">ABOUT</a>
        <a href="/cart">CART</a>
      </div>
    </nav>

    <main class="container">
      <a href="/#collection" class="back-link">← Back to Collection</a>

      <div class="product-layout">
        <!-- Gallery -->
        <div class="gallery">
          <img id="mainImage" src={product.images[0]} alt={product.name} class="main-image" />
          {product.images.length > 1 && (
            <div class="thumb-row">
              {product.images.map((img, i) => (
                <button class="thumb" data-image={img} aria-label={`View image ${i + 1}`}>
                  <img src={img} alt={`${product.name} view ${i + 1}`} />
                </button>
              ))}
            </div>
          )}
        </div>

        <!-- Details -->
        <div class="details">
          <h1 class="product-title">{product.name}</h1>
          <p class="product-price-large">${product.price}</p>
          {product.preOrder && <div class="preorder-badge">PRE-ORDER</div>}

          {product.colors.length > 0 && (
            <div>
              <p class="label">Color</p>
              <div id="colorOptions" class="product-colors">
                {product.colors.map((color, i) => (
                  <div
                    class={`color-swatch ${i === 0 ? 'active' : ''}`}
                    style={`background: ${color.gradient ?? '#ccc'}`}
                    data-image={color.image}
                    data-color={color.name}
                  ></div>
                ))}
              </div>
            </div>
          )}

          <div>
            <p class="label">Size</p>
            <div id="sizeOptions" class="size-grid">
              {['XS', 'S', 'M', 'L', 'XL'].map(size => (
                <button class="size-btn" data-size={size}>{size}</button>
              ))}
            </div>
          </div>

          <!-- Preorder Section -->
          <div class="purchase-row">
            <select id="qty" class="qty-select" aria-label="Quantity">
              {[1, 2, 3, 4, 5].map(n => <option value={n}>{n}</option>)}
            </select>
            <button id="preorderBtn" class="add-btn preorder">Preorder</button>
          </div>
        </div>
      </div>
    </main>

    <!-- Preorder Modal -->
    <div id="preorderModal" class="modal" hidden>
      <div class="modal-content">
        <button id="closeModal" class="close-btn" aria-label="Close">×</button>
        <h2>Join the Waitlist</h2>
        <p>Enter your email to be notified when this product is available for preorder payment.</p>
        <form id="preorderForm">
          <input type="email" id="preorderEmail" placeholder="you@example.com" required />
          <button type="submit" class="submit-btn">Notify Me</button>
        </form>
        <div id="successMsg" class="success-msg" hidden>✅ You’re on the list!</div>
      </div>
    </div>

    <footer class="footer">
      <div class="footer-content">
        <p>© 2025 Tualmi. All rights reserved.</p>
      </div>
    </footer>

    <!-- ✅ Ensure your JS loads and runs -->
    <script type="module" src="/scripts/preorder.js"></script>


    <style>
      .modal {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.6);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 50;
      }
      .modal-content {
        background: #fff;
        color: #222;
        padding: 2rem;
        border-radius: 8px;
        max-width: 400px;
        width: 100%;
        text-align: center;
        position: relative;
      }
      .close-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        border: none;
        background: none;
        font-size: 1.5rem;
        cursor: pointer;
      }
      input[type="email"] {
        width: 100%;
        padding: 0.75rem;
        margin: 1rem 0;
        border: 1px solid #ccc;
        border-radius: 4px;
      }
      .submit-btn {
        background: #e1a2a6;
        border: none;
        padding: 0.75rem 1.5rem;
        color: white;
        font-weight: 500;
        cursor: pointer;
        border-radius: 4px;
      }
      .submit-btn:hover {
        background: #d98c91;
      }
      .success-msg {
        margin-top: 1rem;
        color: green;
      }
      .preorder {
        background-color: #e1a2a6;
      }
      .preorder:hover {
        background-color: #d98c91;
      }
    </style>
  </body>
</html>
